<h1>
	Checks
	<% if user_signed_in? then %>
		<%= link_to new_check_path, class: "btn btn-default btn-default" do %>
			<i class="glyphicon glyphicon-plus"></i> Create
		<% end %>  
	<% end %>
</h1>

<table class="table table-striped table-hover">
	<tbody>
		<% @checks.each do |check| %>
		<tr>
			<td>
				<%= link_to check.title, check_path(check.id) %>
			</td>
			
			<td align="right">
				<% check.tags.each do |tag| %>
					<span class="label label-info">
						<%= tag.name %>
					</span>
					&nbsp
				<% end %>
			</td>

			<!-- 編集／削除はログイン時のみ可 -->
			<% if user_signed_in? then %>
				<td align="right">
					<div class="btn-group">
						<%= link_to edit_check_path(check.id), class: "btn btn-default btn-sm" do %>
							<i class="glyphicon glyphicon-pencil"></i>
						<% end %>  
						<%= link_to check_path(check.id), class: "btn btn-default btn-sm", method: :delete, data: { confirm: "are you sure?" } do %>
							<i class="glyphicon glyphicon-remove"></i>
						<% end %>
					</div>
				</td>
			<% end %>
		</tr>
		<% end %>
	</tbody>
</table>
